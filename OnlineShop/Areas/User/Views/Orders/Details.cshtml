                <th>
                    Giá tiền
                </th>
                <th>
                    Số lượng mua
                </th>
                <th>
                    Tổng tiền
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in orderDetails)
            {
                <tr>
                    <td>
                        @item.ProductTitle
                    </td>
                    <td>
                        @item.ProductPrice
                    </td>
                    <td>
                        @item.Count
                    </td>
                    <td>
                        @(item.Count * item.ProductPrice)
                    </td>
                </tr>
            }
        </tbody>
