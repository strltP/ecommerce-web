@model OnlineShop.Areas.User.Models.EditProfileViewModel

@{
    ViewData["Title"] = "Cập nhật thông tin";
}

<section class="mt-5 pt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-black text-white rounded-top-4">
                    <h5 class="mb-0"><i class="bi bi-pencil-square me-2"></i>@ViewData["Title"]</h5>
                </div>

                <div class="card-body bg-white">
                    <form asp-action="Edit" method="post">
                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label fw-semibold text-dark">Họ và tên</label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>

                        <div class="text-end">
                            <button type="submit" class="btn btn-dark">
                                <i class="bi bi-save me-1"></i> Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>

                <div class="card-footer bg-white text-start">
                    <a asp-action="Index" class="text-decoration-none text-muted">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
