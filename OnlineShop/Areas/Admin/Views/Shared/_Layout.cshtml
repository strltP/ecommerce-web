<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/test_mvc.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="/assets/css/font.awesome.css" />
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="..." crossorigin="anonymous" />

    <!-- Custom -->
    <link rel="stylesheet" href="/assets/css/admin.css" />

</head>
<body class="d-flex">
    <!-- Sidebar -->
    <nav class="bg-dark text-white p-3 min-vh-100" style="width: 220px;">
        <h4 class="text-white">Admin</h4>
        <ul class="nav flex-column mt-4">
            <li class="nav-item"><a class="nav-link text-white" asp-area="Admin" asp-controller="Home" asp-action="Index"><i class="fa fa-home me-2"></i>Trang chủ</a></li>
            <li class="nav-item"><a class="nav-link text-white" asp-area="Admin" asp-controller="Products" asp-action="Index"><i class="fa fa-boxes me-2"></i>Sản phẩm</a></li>
            <li class="nav-item"><a class="nav-link text-white" asp-area="Admin" asp-controller="Orders" asp-action="Index"><i class="fa fa-shopping-cart me-2"></i>Đơn hàng</a></li>
            <li class="nav-item"><a class="nav-link text-white" asp-area="Admin" asp-controller="Home" asp-action="Report"><i class="fa fa-chart-bar me-2"></i>Báo cáo</a></li>
        </ul>
    </nav>

    <!-- Main content -->
    <div class="flex-grow-1">
        <!-- Topbar -->
        <header class="bg-light border-bottom p-2">
            <div class="container-fluid d-flex justify-content-between">
                <h5 class="mb-0">@ViewData["Title"]</h5>
                <a href="/" class="btn btn-outline-dark btn-sm">Trang chính</a>
            </div>
        </header>

        <main class="container-fluid mt-3">
            @RenderBody()
        </main>

        <footer class="text-center text-muted py-3 border-top">
            &copy; 2025 - Admin Panel
        </footer>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
